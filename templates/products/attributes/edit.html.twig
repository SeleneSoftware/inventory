{% extends 'base.dashboard.html.twig' %}

{% block title %}Hello Product Attributes!{% endblock %}

    {% block main %}
        <section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
            <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">{{ page_type }} Attribute</h2>

            {{ form_start(form) }}
            <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
                {{ form_label(form.name,'Name of Attribute',{'label_attr': {'class': 'text-gray-700 dark:text-gray-200'}}) }}
                {{ form_widget(form.name,{'attr': {'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring'}}) }}
            </div>

            <div x-data="tagInput('{{ form.value.vars.value ? form.value.vars.value|join(',') : '' }}')"
                 class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">

                {{ form_label(form.value,'Attribute Values',{'label_attr':{'class':'text-gray-700 dark:text-gray-200'}}) }}

                <div>
                    <div class="flex flex-wrap gap-2 p-2 bg-white border border-gray-200 rounded-md
                                dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600">

                        <template x-for="(tag, index) in tags" :key="index">
                            <span class="flex items-center bg-blue-100 text-blue-700 px-2 py-1 rounded-full text-sm">
                                <span x-text="tag"></span>
                                <button type="button" class="ml-1" @click="removeTag(index)">×</button>
                            </span>
                        </template>

                        <input type="text" x-model="newTag"
                                           @keydown.enter.prevent="addTag"
                                           @keydown.space.prevent="addTag"
                                           class="flex-1 p-1 bg-transparent focus:outline-none"
                                           placeholder="Add value…">
                    </div>

                    {{ form_widget(form.value, {
                    attr: {
                    'x-model': 'serialized',
                    'type': 'hidden'
                    }
                    }) }}
                </div>
            </div>


            <div class="flex justify-end mt-6">
                <button class="px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Save</button>
            </div>
            {{ form_end(form) }}
            <section>

    {% endblock %}
